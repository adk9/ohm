########################################################################
# Phony targets are scoped, so you probably want to declare them first.
#

.PHONY : all distclean clean

%.tex : %.wiki
	wiki2beamer %.wiki > %.tex

%.pdf : %.tex
	pdflatex -halt-on-error $*.tex

all : ohm.pdf

clean :
	rm -f *.{log,aux,out,nav,snm,toc}

nuke: clean
	rm -f *.omc *.pdf 

.DEFAULT : all
